<Window x:Class="foodrecipe.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:foodrecipe"
        mc:Ignorable="d"
        Title="SplashScreen" Height="450" Width="800"
        Background="#333333"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        >
    <Grid Loaded="StackPanel_Loaded">
        <Grid.Background>
            <ImageBrush x:Name="imgSplash" Stretch="UniformToFill"></ImageBrush>
        </Grid.Background>
        <StackPanel>
            <DockPanel>
                <StackPanel Height="400px" DockPanel.Dock="Top"></StackPanel>
                <StackPanel DockPanel.Dock="Bottom" Height="40" VerticalAlignment="Center" Orientation="Horizontal" FlowDirection="RightToLeft">                    
                    <TextBlock VerticalAlignment="Center" Margin="20,0,0,0">Tắt màn hình này mỗi khi khởi động</TextBlock>
                    <CheckBox VerticalAlignment="Center" Margin="10,0,0,0"></CheckBox>
                </StackPanel>
            </DockPanel>
        </StackPanel>
        
        
        
    </Grid>
</Window>
